<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bhavin Prajapat"
        android:textSize="26sp"
        android:textColor="@color/red_500"
        android:fontFamily="sans-serif"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/mobile"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:text="7014316242"
        android:textColor="@color/gray100"
        tools:ignore="HardcodedText"
        android:drawablePadding="30dp"
        app:drawableStartCompat="@drawable/ic_call" />

    <TextView
        android:id="@+id/email"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:text="bhavin7014316242@gmail.com"
        android:textColor="@color/gray100"
        tools:ignore="HardcodedText"
        android:drawablePadding="30dp"
        app:drawableStartCompat="@drawable/ic_email" />

    <TextView
        android:id="@+id/address"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:text="Pindwara, Sirohi, Rajasthan, India"
        android:textColor="@color/gray100"
        tools:ignore="HardcodedText"
        android:drawablePadding="32.5dp"
        android:paddingHorizontal="2.5dp"
        app:drawableStartCompat="@drawable/ic_location" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available ICU beds"
                android:textColor="@color/gray100"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/avialIcuBeds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="end"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow android:layout_marginVertical="@dimen/tableGap">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Oxygen Cilender"
                android:textColor="@color/gray100"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/avialOxyCilender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="end"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Available Oxygen"
                android:textColor="@color/gray100"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/avialOxygen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:gravity="end"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                tools:ignore="HardcodedText" />

        </TableRow>

    </TableLayout>

</androidx.appcompat.widget.LinearLayoutCompat>